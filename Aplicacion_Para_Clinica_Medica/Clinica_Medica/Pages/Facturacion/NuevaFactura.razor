				<div class="form-group row">
					<div class="col-sm-2">
						<b>Identidad Cliente:</b>
						<InputText id="IdentidadPaciente" class="form-control" @bind-Value="factura.IdentidadPaciente" />
					</div>
				</div>
			</div>

		</EditForm>

	</Authorized>
</AuthorizeView>